        <!-- Card -->
        <div class="col-md-4 border-primary">
            <div class="card h-100">
            <!--Card image-->
                <div class="view overlay">
                    <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Others/images/16.jpg"
                            alt="Card image cap">
                    <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
                <!--Card content-->
                <div class="card-body">

                        <!--Title-->
                    <h4 class="card-title"><%= review.resource.site_name%></h4>
                        <!--Text-->
                    <p class="card-text"><%= review.comment %></p>

                    <%= render partial: 'stars', locals: {stars: review.stars.to_i} %>
                    <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
                    <%= link_to review_path(review.id) do%>
                        <button type="button" class="btn btn-secondary">Read more</button>
                    <% end %>
                </div>
                     <!--Card footer-->
                <div class="card-footer">
                    <small class="text-muted">Submitted <%=review.date_submitted %> by: <%= link_to review.user.username, user_path(review.user)%> </p></small>
                </div>   
            </div>
        </div>
        <!-- Card -->