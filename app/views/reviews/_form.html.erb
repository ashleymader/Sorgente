    <%= form_for @review do |f|%>
        <% if @resource %>
            <%= f.hidden_field :resource_id, value: @resource.id %>
        <% else %>
        <div>
            <%= f.label :resource_id %>
            <%= f.collection_select :resource_id, Resource.a_z.includes(:topic) , :id, :site_name_and_topic, include_blank: 'Select One' %>
        </div>
        <% end %>
        <div>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label :comment %>
            <%= f.text_area :comment, size: "20x10" %>
        </div>
        <div>
            <%= f.label :stars %>
            <%= f.number_field :stars, min:0, max:5 %>
        </div>
            

        <%= f.submit "Submit Review", class: "btn btn-primary"%>

    <% end %>