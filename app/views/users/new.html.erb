<h1>Sorgente Signup</h1>

<%= render partial: 'layouts/errors', locals: {object: @user} %>

<%= form_for @user do |f|%>
    <div>
        <%= f.label :username %>
        <%= f.text_field :username %>
    </div>

    <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
    </div>

    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <%= f.submit "Signup!", class: "btn btn-primary"  %>

<%end%>