
<h1>Sorgente Signup</h1>

 <%= render partial: 'layouts/errors', locals: {object: @user} %>

  <div class="registration-form">
    <%= form_for @user do |f|%>

        <div class="form-icon">
                <span><i class="icon icon-user"></i></span>
        </div>

        <div class="form-group">
            <input class="form-control item" placeholder="Username" <%= f.text_field :username %> 
        </div>

        <div class="form-group">
            <input class="form-control item" placeholder="Email" <%= f.email_field :email %> 
        </div>

        <div class="form-group">
            <input class="form-control item" placeholder="Password" <%= f.password_field :password %> 
        </div>

        <div class="form-group">
            <button class="btn btn-block create-account" <%= f.submit %>Create Account</button>
        </div>
    <%end%>

    <div class="social-media">
            <h5>Sign up with social media</h5>
            <div class="social-icons">
                <a href="/auth/google_oauth2"><i class="icon-social-github" title="Github"></i></a>
                <a href="/auth/github"><i class="icon-social-google" title="Google"></i></a>
            </div>
        </div>
    </div>