
<!-- change the color of this flash -->
<p><%= flash[:error] %></p> 


<div class="login-form">
    <%= form_for :user do |f|%>

        <div class="form-icon">
                <span><i class="icon icon-user"></i></span>
        </div>
        
        <h2 class="text-center">Welcome Back! </h2>
        <p class="text-center">Please Login</h2>

        <div class="form-group">
            <input class="form-control item" placeholder="Username" <%= f.text_field :username %> 
        </div>

        <div class="form-group">
            <input class="form-control item" placeholder="Password" <%= f.password_field :password %> 
        </div>

        <div class="form-group">
            <button class="btn btn-block login" <%= f.submit %>Login</button>
        </div>
    <%end%>

    <div class="social-media">
            <h5>Login with social media</h5>
            <div class="social-icons">
                <a href="/auth/google_oauth2"><i class="icon-social-github" title="Github"></i></a>
                <a href="/auth/github"><i class="icon-social-google" title="Google"></i></a>
            </div>
        </div>
    </div>


